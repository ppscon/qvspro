{
  "version": 2,
  "buildCommand": "chmod +x deploy.sh && ./deploy.sh && cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/build",
  "framework": "create-react-app",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/build/$1"
    }
  ],
  "github": {
    "silent": true
  }
} 